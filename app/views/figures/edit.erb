<h1>Edit Figure</h1>

<form action="/figures/<%=@figure.id%>/edit" method="post">
  <label for="figure_name">Figure Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br>

  <h3>Related Titles</h3>
    <%Title.all.each do |title|%>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>>
      <label for="title_<%=title.id%>"><%=title.name%></label><br>
    <%end%>

    <label for="new_title">Add New Title: </label>
    <input type="text" name="title[name]" id="new_title">

    <h3>Related Landmarks</h3>
      <%Landmark.all.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='cheched' if @figure.landmarks.include?(landmark)%>>
        <label for="landmark_<%=landmark.id%>"><%=landmark.name%></label><br>
      <%end%>

      <label for="new_landmark">Add New Landmark: </label>
      <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" value="Edit Figure">
</form>
